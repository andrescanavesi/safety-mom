	<meta name="msapplication-square310x310logo" content="https://res.cloudinary.com/dniiru5xy/image/upload/v1590952431/javaniceday.com/favicon.jpg">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="author" content="Andres Canavesi">
	<meta name="language" content="en">
	<meta name="keywords" content="safety,babies">
	<meta name="robots" content="Index, Follow">
	<meta property="og:locale" content="es_ES">
	<meta property="og:type" content="article">
	<meta property="og:site_name" content="Andres Canavesi">
	<meta property="article:publisher" content="Andres Canavesi">
	<meta property="article:author" content="Andres Canavesi">
	<meta name="title" content="{{title}}">
	<meta name="description" content="{{description}}">
	<meta property="og:title" content="{{title}}">
	<meta property="og:description" content="{{description}}">
	<meta property="og:url" content="{{linkToThisPage}}">
	<meta property="og:image" content="{{pageImage}}">
	<meta property="article:modified_time" content="{{pageDateModified}}">


	<!-- Bootstrap CSS -->
	<link id="bootstrapCss" as="style" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	<link id="stylesCss" as="style" rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

<!--Main Navigation-->
<header>

	<nav class="navbar navbar-expand-lg navbar-light bg-light my-nav-custom">
		<a class="navbar-brand" href="/"><strong>safety-mom.com</strong></a>
		<button class="navbar-toggler" type="button" data-toggle="collapse"
		        data-target="#navbarSupportedContent" onclick="toggleNavbar()"
		        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item active">
					<a class="nav-link" href="/">Inicio <span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/all/posts">Posts</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/all/tags">Tags</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/post/about">About</a>
				</li>
			</ul>
		</div>
	</nav>

</header>
<!--Main Navigation-->


<!-- Page Content -->
<div class="container pt-4">

	<div class="row px-2 my-3">
		<input id="search" class="form-control" type="text" value="{{searchText}}"
		       onkeyup="search(event, this)" placeholder="Buscar..." aria-label="Search">
	</div>
	<div class="row">

		<div class="col-md-1">

		</div>

		<!-- Post Content Column -->
		<div class="col-lg-10">

			{{{body}}}

		</div>

	</div>
	<!-- /.row -->

</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-5 bg-dark mt-3">
	<div class="container">
		<p class="m-0 text-center text-white">Copyright &copy;
			<a href="/" class="text-decoration-none "><span class="text-white">www.safety-mom.com</span></a></p>
	</div>
	<div class="container">
		<div class="text-center mt-3 text-muted">
			<a href="/all/posts" class="text-decoration-none "><span class="text-muted">posts</span></a>
			|
			<a href="/all/tags" class="text-decoration-none "><span class="text-muted">tags</span></a>
			|
			<a href="/all/search" class="text-decoration-none "><span class="text-muted">search terms</span></a>
			|
			<a href="/sitemap.xml" class="text-decoration-none "><span class="text-muted">sitemap</span></a>
		</div>

	</div>
	<!-- /.container -->
</footer>

<script type="text/javascript" async="true" src="/javascripts/common.js"></script>

