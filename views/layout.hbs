	<title>{{title}}</title>

	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta charset="utf-8">
	<meta http-equiv="Cache-control" content="public, max-age=50000">
	<meta name="theme-color" content="#009900">
